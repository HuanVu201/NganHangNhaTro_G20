@{
    @model User
}
<div class="user-info col-lg-8 ">
    <div class="user-info-row-1 ">
        <div class="img-user">
            <img  src="~/images/anhhalinh.jpg" />
            <p>@Model.Name</p>
        </div>
       <div class="list-info-user">
           <ul>
                <li><i class="far fa-user"></i> Thông tin tài khoản</li>
                <a href="/User/UserInfoHouseBooking">
                <li><i class="fas fa-home"></i>Danh sách phòng đã thuê</li>
                </a>
           </ul>
       </div>
    </div>
    <div class="user-info-row-2 ">
        <div class="title-user">
            <h1>Thông tin tài khoản</h1>
        </div>
        <div class="text-info-user">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td>
                            Họ tên:
                        </td>
                        <td>
                            @Model.Name
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Email
                        </td>
                        <td>
                            @Model.Email
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Số điện thoại
                        </td>
                        <td>
                            @Model.PhoneNumber
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Giới tính
                        </td>
                        <td>
                            @* @if (Model.Gender == 1)
                            {
                                <p>Nam</p>
                            }
                            else if (Model.Gender == 0)
                            {
                                <p>Nữ</p>
                            } *@
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
