@{
    @model UserInfoHouseBookingViewModel
}
<div class="user-info-booking col-lg-12 ">
    <div class=" user-info-booking-row-1 ">
        <div class="img-user">
            @if (Context.Session.GetString("Role") == "role1")
            {
                <img src="~/images/image_admin.jpg" />
            }
            else
            {
                <img src="~/images/image_user.jpg" />
            }
            <p>@Model.user.Name</p>
        </div>
        <div class="list-info-user">
            <ul>
                <li><i class="far fa-user"></i>  <a href="/User/UserInfo"> Thông tin tài khoản</a></li>
                <li><i class="fas fa-home"></i>Danh sách phòng đã thuê</li>
            </ul>
        </div>
    </div>
    @using (Html.BeginForm("", "", FormMethod.Post))
    {
        <div id="ModifiedModal" style="font-size:1.5rem" class="modal fade" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-body">
                        <h6 style="color:#0481A0">Ghi Chú:</h6>
                        <textarea id="node" name="note" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                        <button type="submit" id="editUser" class="btn btn-primary">Sửa</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="user-info-booking-row-2  ">
        <div class="title-user">
            <h1>Danh sách phòng đã thuê</h1>
        </div>
        <div  class="text-info-user-booking">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tên phòng</th>
                        <th>Địa chỉ</th>
                        <th>Giá</th>
                        <th>Ngày đặt</th>
                        <th>Mô tả</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in @Model.bookingList)
                    {
                        <tr>
                            <td>@booking.houseName</td>
                            <td>@booking.houseAddress</td>
                            <td>@booking.housePrice</td>
                            <td>@booking.houseCreatedAt</td>
                            <td>@booking.houseTittle</td>
                            <td>
                                <i id="edit-house-booking" class="far fa-edit modifile"></i>
                                <i onclick="DeleteBooking('@booking.bookingId.ToString("D")')" id="delete-house-booking" class="fas fa-trash-alt" data-booking-id="@booking.bookingId"></i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    function DeleteBooking(bookingId) {
        if (confirm("Bạn có chắc muốn xóa phòng này ko ?")) {
            window.location.href = "/User/DeleteBooking?bookingId=" + bookingId;
        }
    }
</script>
<script src="~/js/UserModifile.js"></script>