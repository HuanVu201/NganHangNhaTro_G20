<!-- Modal CRUD-->
<div class="modal fade" id="myModalCRUD" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <form id="form">
                    <div class="form-group inputBlock">
                        <label for="HouseTitle">Tiêu đề</label>
                        <input type="text" class="form-control inputContent" id="HouseTitle" name="HouseTitle" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="OfLocationId">Mã nhóm địa bàn</label>
                        <input type="text" class="form-control inputContent" id="OfLocationId" name="OfLocationId" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="Address">Địa chỉ chi tiết:</label>
                        <input type="text" class="form-control inputContent" id="Address" name="Address" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="Acreage">Diện ích</label>
                        <input type="number" class="form-control inputContent" id="Acreage" name="Acreage" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="Price">Giá</label>
                        <input type="text" class="form-control inputContent" id="Price" name="Price" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="Desciption">Mô tả</label>
                        <input type="text" class="form-control inputContent" id="Desciption" name="Desciption" placeholder="" />
                    </div>
                  @*   <div class="form-group inputBlock">
                        <label for="rate">Đánh giá</label>
                        <input type="text" class="form-control inputContent" id="rate" name="rate" placeholder="" />
                    </div> *@
                    <div class="form-group inputBlock">
                        <label for="HouseType">Loại phòng</label>
                        <select name="HouseType" id="HouseType" class="form-control selectContent">
                            <option value="nhaDanSinh">Nhà dân sinh</option>
                            <option value="ccmn">CCMN</option>
                            <option value="khuTapThe">Nhà khu tập thể</option>
                            <option value="kyTucXa">Ký túc xã</option>
                        </select>
                    </div>
                    <div class="form-group inputBlock">
                        <label for="HouseStatus">Trạng thái</label>
                        <select name="HouseStatus" id="HouseStatus" class="form-control selectContent">
                            <option value="conPhong">Còn phòng</option>
                            <option value="dangChoThue">Đang cho thuê</option>
                        </select>
                    </div>
                    <div class="form-group inputBlock">
                        <label for="OwnerName">Tên chủ sở hữu</label>
                        <input type="text" class="form-control inputContent" id="OwnerName" name="OwnerName" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="OwnerPhone">Số điện thoại</label>
                        <input type="text" class="form-control inputContent" id="OwnerPhone" name="OwnerPhone" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="ImageCategory">Đường dẫn ảnh: </label>
                        <input type="text" class="form-control inputContent" id="ImageCategory" name="ImageCategory" placeholder="" />
                    </div>
                    

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" style="display: none">Thêm mới</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display: none">Cập nhật</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>
<!-- The end: Modal CRUD -->
