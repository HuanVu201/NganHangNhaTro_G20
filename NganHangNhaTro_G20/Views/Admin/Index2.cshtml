    <!-- Modal CRUD-->
    <div class="modal fade" id="myModalCRUD" role="dialog">
        <div class="modal-dialog">
            
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <form id="form">
                        <div class="form-group inputBlock">
                            <label for="maTaiKhoan">Mã tài khoản</label>
                            <input type="text" class="form-control inputContent" id="maTaiKhoan" name="maTaiKhoan" placeholder="" />
                        </div>
                        <div class="form-group inputBlock">
                            <label for="ten">Họ và tên</label>
                            <input type="text" class="form-control inputContent" id="ten" name="ten" placeholder="" />
                        </div>
                        <div class="form-group inputBlock">
                            <label for="ngaySinh">Ngày sinh</label>
                            <input type="date" class="form-control inputContent" id="ngaySinh" name="ngaySinh" placeholder="" />
                        </div>
                        <div class="form-group inputBlock">
                            <label for="gioiTinh">Giới tính</label>
                            <select name="" id="gioiTinh" class="form-control selectContent">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>
                        <div class="form-group inputBlock">
                            <label for="soDienThoai">Số điện thoại</label>
                            <input type="text" class="form-control inputContent" id="soDienThoai" placeholder="" />
                        </div>
                        <div class="form-group inputBlock">
                            <label for="email">Email</label>
                            <input type="text" class="form-control inputContent" id="email" placeholder="" />
                        </div>
                        <div class="form-group inputBlock">
                            <label for="chucVu">Chức vụ</label>
                            <input type="text" class="form-control inputContent" id="chucVu" placeholder="" />
                        </div>
                        <div class="form-group inputBlock">
                            <label for="maCoQuan">Mã cơ quan làm việc</label>
                            <input type="text" class="form-control inputContent" id="maCoQuan" placeholder="" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" style="display: none">Thêm mới</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display: none">Cập nhật</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>

        </div>
    </div>
    <!-- The end: Modal CRUD -->



