@{
    @model List<Role> 
}
<div>
    <h1>List Roles:</h1>
    <table>
        <thead>
            <tr>
                <th>ID:</th>
                <th>Name:</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = role.Id })">Edit</a>
                        <a href="@Url.Action("Delete", new { id = role.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create")">Create new role</a>
</div>